generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- PRODUCT SECTION ---

model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  price       Decimal  @db.Decimal(12, 2)
   
  // External Links
  shopeeLink  String?
  tokpedLink  String?
   
  // Pros & Cons (Tetap String dulu, nanti diparsing di frontend)
  pros        String?  @db.Text
  cons        String?  @db.Text
   
  images      String[] @default([])
  isFeatured  Boolean  @default(false)
   
  // RELATIONS
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])

  tags        Tag[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  slug      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
}

model Tag {
  id        String    @id @default(uuid())
  name      String    @unique
  slug      String    @unique
  products  Product[] 
}

// --- BLOG SECTION (YANG BERUBAH) ---

model Post {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
   
  // ðŸ‘‡ PERUBAHAN DISINI:
  // Dulu: String @db.Text
  // Sekarang: Json (Agar bisa menampung data Editor.js yang kompleks)
  content   Json     
   
  thumbnail String?
  shopeeLink  String?  
  tokpedLink  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- SETTINGS & NAV ---

model SiteSetting {
  id               Int      @id @default(1)
   
  // Identity
  siteName         String   @default("AffiliatePro")
  footerAbout      String   @default("Portal review gadget terpercaya.") @db.Text
   
  // Hero
  heroTitle        String   @default("Cerdas Memilih, Puas Membeli.")
  heroPromo        String   @default("Promo Akhir Tahun")
  heroDescription  String   @default("Temukan gadget terbaik.") @db.Text
  heroImage        String?  
   
  primaryBtnText   String   @default("Mulai Belanja")
  primaryBtnLink   String   @default("#products")
  secondaryBtnText String   @default("Tentang Kami")
  secondaryBtnLink String   @default("/about")

  updatedAt        DateTime @updatedAt
}

model NavbarLink {
  id        String   @id @default(uuid())
  label     String   
  url       String   
  order     Int      @default(0)
  createdAt DateTime @default(now())
}

model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String   
  createdAt DateTime @default(now())
}

model AdminNote {
  id        String   @id @default(uuid())
  title     String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}